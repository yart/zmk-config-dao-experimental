#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/rgb.h>

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <150>;
            quick-tap-ms = <0>;
            flavor = "tap-preferred";
            bindings =
                <&kp>,
                <&kp>;
        };
    };

    combos {
        compatible = "zmk,combos";

        kp_0 {
            bindings = <&kp N0>;
            key-positions = <6 18>;
            layers = <0>;
        };

        kp_1 {
            bindings = <&kp N1>;
            key-positions = <5 17>;
        };

        kp_2 {
            bindings = <&kp N2>;
            key-positions = <7 19>;
        };

        kp_3 {
            bindings = <&kp N3>;
            key-positions = <4 16>;
        };
    };

    macros {
        zed_em_kay: zed_em_kay {
            compatible = "zmk,behavior-macro";
            label = "ZM_zed_em_kay";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LSHFT>,
                <&macro_tap>,
                <&kp Z &kp M &kp K>,
                <&macro_release>,
                <&kp LSHFT>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        base {
            bindings = <
 &kp LGUI &kp TAB   &kp Q      &kp W      &kp E       &kp R        &kp T    &kp Y   &kp U        &kp I       &kp O      &kp P         &kp BSLH &kp RGUI
          &kp LCTRL &hm LGUI A &hm LALT S &hm LCTRL D &hm LSHIFT F &kp G    &kp H   &hm RSHIFT J &hm RCTRL K &hm RALT L &hm RGUI SEMI &kp APOS
          &kp LSHFT &kp Z      &kp X      &kp C       &kp V        &kp B    &kp N   &kp M        &kp COMMA    &kp DOT   &kp FSLH      &kp ESC
                                       &kp LGUI         &mo 1  &kp SPACE    &kp RET &mo 2        &kp RALT
            >;
        };

        raise {
            bindings = <
     &trans  &trans     &kp N1       &kp N2       &kp N3       &kp N4       &kp N5         &kp N6 &kp N7 &kp N8 &kp N9 &kp N0 &trans &trans
             &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4   &trans &trans &trans &trans &trans &trans
             &trans     &trans       &trans       &trans       &trans       &trans         &trans &trans &trans &trans &trans &trans
                                                  &trans       &trans       &trans         &trans &trans &trans
            >;
        };

        lower {
            bindings = <
 &trans  &trans  &kp EXCL  &kp AT                        &kp HASH                          &kp DLLR                         &kp PRCNT          &kp CARET   &kp AMPS  &kp KP_MULTIPLY  &kp LPAR  &kp RPAR     &trans  &trans
         &trans    &trans  &trans                          &trans                            &trans                            &trans          &kp MINUS  &kp EQUAL         &kp LBKT  &kp RBKT  &kp BSLH  &kp GRAVE
         &trans    &trans  &trans                          &trans                            &trans                            &trans          &kp UNDER   &kp PLUS         &kp LBRC  &kp RBRC  &kp PIPE  &kp TILDE
                           &rgb_ug RGB_COLOR_HSB(0,50,56)  &rgb_ug RGB_COLOR_HSB(104,57,55)  &rgb_ug RGB_COLOR_HSB(209,50,55)             &trans     &trans           &trans
            >;
        };
    };
};
